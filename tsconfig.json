{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": false,
        "baseUrl": "kive",
        "paths": {
            "@pipeline/*":  ["pipeline/static/pipeline/*"],
            "@canvas/*":    ["pipeline/static/pipeline/canvas/*"],
            "@portal/*":    ["portal/static/portal/*"],
            "@sandbox/*":   ["sandbox/static/sandbox/*"],
            "@librarian/*": ["librarian/static/librarian/*"]
        }
    },
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}