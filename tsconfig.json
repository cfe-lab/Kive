{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": false,
        "baseUrl": "kive",
        "paths": {
            "@container/*": ["container/static/container/*"],
            "@portal/*":    ["portal/static/portal/*"],
            "@librarian/*": ["librarian/static/librarian/*"]
        }
    },
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}